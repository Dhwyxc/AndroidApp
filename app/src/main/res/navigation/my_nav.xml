<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.ndhuy19it1.menuexam.FirstFragment"
        android:label="Floating Context Menu"
        tools:layout="@layout/fragment_first" />
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.ndhuy19it1.menuexam.SecondFragment"
        android:label="Popup Menu"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_secondFragment_to_aboutMeFragment"
            app:destination="@id/aboutMeFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutMeFragment"
        android:name="com.ndhuy19it1.menuexam.AboutMeFragment"
        android:label="About Me"
        tools:layout="@layout/fragment_about_me" />
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.ndhuy19it1.menuexam.ThirdFragment"
        android:label="Context Action Bar"
        tools:layout="@layout/fragment_third" />
</navigation>